<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
             xmlns:styles="clr-namespace:QSF.Styles"
             xmlns:local="clr-namespace:QSF.Examples.NavigationViewControl.ConfigurationExample"
             x:Class="QSF.Examples.NavigationViewControl.ConfigurationExample.ConfigurationView"
             Padding="{OnIdiom Default='16, 20', Phone=0}">
    <ContentView.Resources>
        <ResourceDictionary>
            <Style TargetType="telerik:RadNavigationView" BasedOn="{StaticResource RadNavigationViewStyle}">
                <Setter Property="HorizontalOptions" Value="Fill" />
                <Setter Property="BorderThickness" Value="{OnIdiom Default=0, Desktop=1}"/>
            </Style>

            <DataTemplate x:Key="SettingsPopupContentTemplate">
                <telerik:RadBorder BackgroundColor="{DynamicResource SettingsBackgroundColor}"
                                   BorderColor="{DynamicResource PlatformBorderColor}"
                                   BorderThickness="1"
                                   CornerRadius="8">
                    <Grid RowDefinitions="Auto, Auto, Auto"
                          RowSpacing="12"
                          Padding="16, 12">
                        <Label Text="Congratulations on experimenting with the&#x0a;Telerik UI for .NET Maui NavigationView!&#x0a;Learn more about it here:" />
                        <Label Grid.Row="1"
                               Text="Online help documentation"
                               TextColor="#0078D4">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnHyperlinkTapped" />
                            </Label.GestureRecognizers>
                        </Label>
                        <Button Grid.Row="2"
                                Text="OK"
                                Margin="0, 12, 0, 0"
                                Clicked="OnClosePopupBtnClicked"
                                HorizontalOptions="{OnIdiom Default=Center, Desktop=End}" />
                    </Grid>
                </telerik:RadBorder>
            </DataTemplate>
        </ResourceDictionary>
    </ContentView.Resources>
    <Grid>
        <telerik:RadNavigationView x:Name="navigationView" 
                                   HeaderText="{Binding Header}"
                                   DisplayMode="{Binding DisplayMode, Mode=TwoWay}"
                                   AutoChangeDisplayMode="{Binding AutoChangeDisplayMode, Mode=TwoWay}"
                                   CompactPaneWidth="{Binding CompactPaneWidth, Mode=TwoWay}"
                                   ExpandedPaneWidth="{Binding ExpandedPaneWidth, Mode=TwoWay}"
                                   CompactModeThresholdWidth="{Binding CompactModeThresholdWidth, Mode=TwoWay}"
                                   ExpandedModeThresholdWidth="{Binding ExpandedModeThresholdWidth, Mode=TwoWay}"
                                   SelectionChanged="NavigationViewSelectionChanged">
            <telerik:RadNavigationView.Items>
                <telerik:NavigationViewItem Text="Discover">
                    <telerik:NavigationViewItem.ImageSource>
                        <FontImageSource Glyph="&#xe852;"
                                         FontFamily="TelerikFontExamples"
                                         Size="16" />
                    </telerik:NavigationViewItem.ImageSource>
                </telerik:NavigationViewItem>
                <telerik:NavigationViewItem Text="I was there">
                    <telerik:NavigationViewItem.ImageSource>
                        <FontImageSource Glyph="&#xe83d;"
                                         FontFamily="TelerikFontExamples"
                                         Size="16" />
                    </telerik:NavigationViewItem.ImageSource>
                </telerik:NavigationViewItem>
                <telerik:NavigationViewItem Text="Explore">
                    <telerik:NavigationViewItem.ImageSource>
                        <FontImageSource Glyph="&#xe86a;"
                                         FontFamily="TelerikFontExamples"
                                         Size="16" />
                    </telerik:NavigationViewItem.ImageSource>
                </telerik:NavigationViewItem>
                <telerik:NavigationViewItem Text="Favorite photos">
                    <telerik:NavigationViewItem.ImageSource>
                        <FontImageSource Glyph="&#xe801;"
                                         FontFamily="TelerikFontExamples"
                                         Size="16" />
                    </telerik:NavigationViewItem.ImageSource>
                </telerik:NavigationViewItem>
                <telerik:NavigationViewItem Text="Settings"
                                            Position="Footer"
                                            IsSelectable="False"
                                            Clicked="SettingsItemClicked">
                    <telerik:NavigationViewItem.ImageSource>
                        <FontImageSource Glyph="&#xe822;"
                                         FontFamily="TelerikFontExamples"
                                         Size="16" />
                    </telerik:NavigationViewItem.ImageSource>
                </telerik:NavigationViewItem>
            </telerik:RadNavigationView.Items>
            <ScrollView>
                <Grid RowDefinitions="Auto, *"
                      RowSpacing="15"
                      Margin="20">
                    <Label Text="{Binding SelectedItem.Text, Source={x:Reference navigationView}}"
                           Style="{StaticResource BaseLabelStyle}"
                           FontSize="16"
                           FontAttributes="Bold" />
                    <Grid Grid.Row="1"
                          RowDefinitions="*, *"
                          RowSpacing="10"
                          ColumnDefinitions="{OnIdiom Default='2*, *', Desktop='4*, *'}"
                          ColumnSpacing="10"
                          HorizontalOptions="Start"
                          VerticalOptions="Start">
                        <Image x:Name="itemImage1"
                               Grid.RowSpan="2"
                               HeightRequest="{OnIdiom Default=160, Desktop=460}"
                               Aspect="AspectFill" />
                        <Image x:Name="itemImage2"
                               Grid.Column="1"
                               HeightRequest="{OnIdiom Default=75, Desktop=225}"
                               Aspect="AspectFill"
                               VerticalOptions="End" />
                        <Image x:Name="itemImage3"
                               Grid.Column="1"
                               Grid.Row="1"
                               HeightRequest="{OnIdiom Default=75, Desktop=225}"
                               Aspect="AspectFill"
                               VerticalOptions="Start" />
                    </Grid>
                </Grid>
            </ScrollView>
        </telerik:RadNavigationView>
    </Grid>
</ContentView>