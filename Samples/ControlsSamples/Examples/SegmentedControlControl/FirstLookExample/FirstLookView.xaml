<?xml version="1.0" encoding="utf-8" ?>
<telerik:RadContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                        xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
                        x:Class="QSF.Examples.SegmentedControlControl.FirstLookExample.FirstLookView"
                        Margin="16, 20">

    <telerik:RadContentView.Resources>
        <ResourceDictionary>
            <Style TargetType="VerticalStackLayout">
                <Setter Property="Spacing" Value="20"/>
            </Style>
            <Style TargetType="Label" x:Key="descriptionLabel" BasedOn="{StaticResource BaseLabelStyle}">
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Margin" Value="0,4,0,0"/>
                <Setter Property="HorizontalOptions" Value="Start"/>
            </Style>
            <Style TargetType="telerik:RadSegmentedControl" x:Key="segmentedStyle">
                <Setter Property="SegmentTextColor" Value="{DynamicResource DefaultTextColor}"/>
                <Setter Property="HorizontalOptions" Value="Start"/>
                <Setter Property="SelectedSegmentTextColor" Value="White"/>
                <Setter Property="SegmentBackgroundColor" Value="{DynamicResource SegmentedControlSegmentBackgroundColor}"/>
                <Setter Property="SelectedSegmentBackgroundColor" Value="{DynamicResource SegmentedControlSelectedSegmentBackgroundColor}"/>
                <Setter Property="DisabledSegmentTextColor" Value="{DynamicResource SegmentedControlFirstLookDisabledSegmentTextColor}"/>
            </Style>
        </ResourceDictionary>
    </telerik:RadContentView.Resources>
    <VerticalStackLayout>
        <Label Grid.Row="1"
               Text="Modes" 
               FontSize="18" />
        <VerticalStackLayout IsVisible="{OnPlatform Android='False', iOS='False'}">
            <Label Text="Image"
                   Style="{StaticResource descriptionLabel}"/>
            <telerik:RadSegmentedControl ItemsSource="{Binding SmallImages}"
                                         SelectedIndex="0"
                                         HorizontalOptions="Start"
                                         SelectedSegmentBackgroundColor="{DynamicResource SegmentedControlSelectedSegmentBackgroundColorImage}"
                                         AutomationId="imageSegmentedControl"/>
        </VerticalStackLayout>
        <VerticalStackLayout>
            <Label Text="Text" 
                   Style="{StaticResource descriptionLabel}"/>
            <telerik:RadSegmentedControl ItemsSource="{Binding Categories}"
                                         Style="{StaticResource segmentedStyle}"
                                         SelectedIndex="1" 
                                         AutomationId="textSegmentedControl"/>
        </VerticalStackLayout>
        <VerticalStackLayout>
            <Label Text="Disabled" 
                   Style="{StaticResource descriptionLabel}"/>
            <telerik:RadSegmentedControl x:Name="segmented"
                                         Style="{StaticResource segmentedStyle}"
                                         ItemsSource="{Binding Categories}"
                                         SelectedIndex="0"
                                         AutomationId="disabledSegmentedControl"/>
        </VerticalStackLayout>
    </VerticalStackLayout>
</telerik:RadContentView>