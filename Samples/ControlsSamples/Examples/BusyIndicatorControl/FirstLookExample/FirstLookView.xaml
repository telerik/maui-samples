<?xml version="1.0" encoding="utf-8" ?>
<views:GalleryExampleViewBase xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                              xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                              xmlns:views="clr-namespace:QSF.Views"
                              xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
                              x:Class="QSF.Examples.BusyIndicatorControl.FirstLookExample.FirstLookView">
  <views:GalleryExampleViewBase.Resources>
    <ResourceDictionary>
      <DataTemplate x:Key="busyIndicator">
                <telerik:RadBusyIndicator AnimationContentHeightRequest="200"
                                            AnimationContentWidthRequest="200"
                                            AnimationType="{Binding AnimationType}"
                                            AnimationContentColor="{Static Application.AccentColor}"
                                            InputTransparent="True"
                                            IsBusy="True" />
      </DataTemplate>
    </ResourceDictionary>
  </views:GalleryExampleViewBase.Resources>
</views:GalleryExampleViewBase>