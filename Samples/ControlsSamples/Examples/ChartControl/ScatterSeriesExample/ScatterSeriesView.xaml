<?xml version="1.0" encoding="utf-8" ?>
<views:GalleryExampleViewBase xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                              xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                              xmlns:views="clr-namespace:QSF.Views"
                              xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
                              xmlns:styles="clr-namespace:QSF.Styles"
                              x:Class="QSF.Examples.ChartControl.ScatterSeriesExample.ScatterSeriesView">
    <views:GalleryExampleViewBase.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <styles:GalleryResources/>
            </ResourceDictionary.MergedDictionaries>
            <DataTemplate x:Key="ScatterPointSeries">
                <telerik:RadCartesianChart BackgroundColor="Transparent"
                                           AutomationId="cartesianChartScatterPointSeries">
                    <telerik:RadCartesianChart.ChartBehaviors>
                        <telerik:ChartSelectionBehavior DataPointSelectionMode="None"
                                                        SeriesSelectionMode="Single" />
                    </telerik:RadCartesianChart.ChartBehaviors>
                    <telerik:RadCartesianChart.HorizontalAxis>
                        <telerik:NumericalAxis Minimum="0"
                                               Maximum="100"
                                               LabelTextColor="{DynamicResource DefaultTextColor}"
                                               LineColor="{DynamicResource ChartLineColor}"
                                               MajorTickThickness="2"
                                               LabelFitMode="MultiLine"
                                               ShowLabels="True"
                                               MajorTickBackgroundColor="{DynamicResource ChartLineColor}" />
                    </telerik:RadCartesianChart.HorizontalAxis>
                    <telerik:RadCartesianChart.VerticalAxis>
                        <telerik:NumericalAxis LabelTextColor="{DynamicResource DefaultTextColor}"
                                               LineColor="{DynamicResource ChartLineColor}"
                                               MajorTickBackgroundColor="{DynamicResource ChartLineColor}" />
                    </telerik:RadCartesianChart.VerticalAxis>
                    <telerik:RadCartesianChart.Grid>
                        <telerik:CartesianChartGrid MajorLinesVisibility="Y"
                                                    MajorLineThickness="1"
                                                    MajorLineColor="{DynamicResource ChartMajorLineColor}" />
                    </telerik:RadCartesianChart.Grid>
                    <telerik:RadCartesianChart.Series>
                        <telerik:ScatterPointSeries XValueBinding="Value"
                                                    YValueBinding="ValueY"
                                                    ItemsSource="{Binding SeriesData}" />
                        <telerik:ScatterPointSeries XValueBinding="Value"
                                                    YValueBinding="ValueY"
                                                    ItemsSource="{Binding SecondSeriesData}" />
                    </telerik:RadCartesianChart.Series>
                </telerik:RadCartesianChart>
            </DataTemplate>
            <DataTemplate x:Key="ScatterLineSeries">
