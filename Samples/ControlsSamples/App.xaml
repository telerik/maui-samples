<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:QSF"
             xmlns:styles="clr-namespace:QSF.Styles"
             xmlns:converters="clr-namespace:QSF.Converters"
             xmlns:extensions="clr-namespace:QSF.MarkupExtensions"
             xmlns:viewModels="clr-namespace:QSF.ViewModels"
             xmlns:windows="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.WindowsSpecific;assembly=Microsoft.Maui.Controls"
             xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
             x:Class="QSF.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <styles:ColorsLight />
                <local:TelerikThemeResources Theme="PlatformLight"/>
            </ResourceDictionary.MergedDictionaries>
            <telerik:InvertedBooleanConverter x:Key="InvertedBooleanConverter" />
            <telerik:NullOrEmptyToBoolConverter x:Key="NullOrEmptyToBoolConverter" />
            <converters:ModelToViewConverter x:Key="ModelToViewConverter" />
            <converters:ModelToConfigurationAreaConverter x:Key="ModelToConfigurationAreaConverter" />

            <FontImageSource x:Key="ThemesButtonFontImageSource"
                             FontFamily="TelerikFontExamples"
                             Glyph="&#xe8b2;"
                             Size="24"
                             Color="#FFFFFF" />

            <Style TargetType="Label">
                <Setter Property="TextColor" Value="{DynamicResource DefaultTextColor}" />
            </Style>
            <Style x:Key="StatusTagBorderStyle" TargetType="telerik:RadBorder">
                <Setter Property="WidthRequest" Value="{OnPlatform Default=34, WinUI=30}" />
                <Setter Property="HeightRequest" Value="{OnPlatform Default=14, WinUI=12}" />
                <Setter Property="CornerRadius" Value="{OnPlatform Default=8, WinUI=6}" />
            </Style>
            <Style x:Key="StatusTagLabelStyle" TargetType="Label">
                <Setter Property="FontSize" Value="{OnPlatform Default=9, WinUI=7.25}" />
                <Setter Property="TextTransform" Value="Uppercase" />
                <Setter Property="TextColor" Value="{DynamicResource TextOnAccentColor}" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="VerticalOptions" Value="Center" />
            </Style>
            <DataTemplate x:Key="NormalStatusTemplate" />
            <DataTemplate x:Key="NewStatusTemplate">
                <telerik:RadBorder BackgroundColor="{DynamicResource BadgeNewBackgroundColor}"
                                   Style="{StaticResource StatusTagBorderStyle}">
                    <Label Text="New"
                           Style="{StaticResource StatusTagLabelStyle}" />
                </telerik:RadBorder>
            </DataTemplate>
            <DataTemplate x:Key="UpdatedStatusTemplate">
                <telerik:RadBorder BackgroundColor="{DynamicResource BadgeUpdatedBackgroundColor}"
                                   Style="{StaticResource StatusTagBorderStyle}">
                    <Label Text="Upd"
                          Style="{StaticResource StatusTagLabelStyle}" />
                </telerik:RadBorder>
            </DataTemplate>
            <DataTemplate x:Key="BetaStatusTemplate">
                <telerik:RadBorder BackgroundColor="{DynamicResource AccentColor8}"
                                   Style="{StaticResource StatusTagBorderStyle}">
                    <Label Text="Beta"
                           Style="{StaticResource StatusTagLabelStyle}" />
                </telerik:RadBorder>
            </DataTemplate>
            <converters:StatusTagToTemplateConverter x:Key="StatusTagToTemplateConverter"
                                                     NormalTemplate="{StaticResource NormalStatusTemplate}"
                                                     NewTemplate="{StaticResource NewStatusTemplate}"
                                                     UpdatedTemplate="{StaticResource UpdatedStatusTemplate}"
                                                     BetaTemplate="{StaticResource BetaStatusTemplate}" />
            <Style x:Key="BaseLabelStyle" TargetType="Label">
                <Setter Property="TextColor" Value="{DynamicResource DefaultTextColor}" />
            </Style>
            <Style x:Key="LabelOnAccentStyle" TargetType="Label">
                <Setter Property="TextColor" Value="{DynamicResource TextOnAccentColor}" />
                <Setter Property="VerticalOptions" Value="Center" />
            </Style>
            <Style x:Key="PageHeaderLabelStyle" TargetType="Label" BasedOn="{StaticResource LabelOnAccentStyle}">
                <Setter Property="FontSize" Value="28" />
            </Style>
            <Style x:Key="HeaderLabelStyle" TargetType="Label" BasedOn="{StaticResource LabelOnAccentStyle}">
                <Setter Property="FontSize" Value="{OnPlatform Default=18, Android=20, iOS=17}"/>
            </Style>
            <Style x:Key="PlaceholderLabelStyle" TargetType="Label">
                <Setter Property="TextColor" Value="{DynamicResource PlaceholderColor}" />
                <Setter Property="VerticalTextAlignment" Value="Center" />
            </Style>
            <Style x:Key="ControlNameLabelStyle" TargetType="Label" BasedOn="{StaticResource BaseLabelStyle}">
                <Setter Property="FontSize" Value="{OnPlatform Default=17, Android=16}"/>
            </Style>
            <Style x:Key="DescriptionLabelStyle" TargetType="Label">
                <Setter Property="TextColor" Value="{DynamicResource PlaceholderColor}" />
                <Setter Property="FontSize" Value="14"/>
            </Style>
            <Style x:Key="DescriptionLabelWithTruncationStyle" TargetType="Label" BasedOn="{StaticResource DescriptionLabelStyle}">
                <Setter Property="MaxLines" Value="2"/>
                <Setter Property="LineBreakMode" Value="TailTruncation"/>
            </Style>
            <Style TargetType="ImageButton" x:Key="DefaultBackButtonStyle">
                <Setter Property="Source" Value="arrowleft.png" />
                <Setter Property="WidthRequest" Value="24" />
                <Setter Property="HeightRequest" Value="24" />
                <Setter Property="Aspect" Value="Center" />
                <Setter Property="VerticalOptions" Value="Center" />
                <Setter Property="BackgroundColor" Value="Transparent"/>
            </Style>
            <Style TargetType="ImageButton" x:Key="IOSBackButtonStyle">
                <Setter Property="Source" Value="arrowleft.png" />
                <Setter Property="BackgroundColor" Value="Transparent"/>
            </Style>
            <Style TargetType="Image" x:Key="HeaderImageStyle">
                <Setter Property="Source" Value="logo.png" />
                <Setter Property="HeightRequest" Value="20" />
                <Setter Property="WidthRequest" Value="20" />
                <Setter Property="VerticalOptions" Value="Center" />
            </Style>
            <Style TargetType="Grid" x:Key="HeaderStyle">
                <Setter Property="ColumnSpacing" Value="10" />
                <Setter Property="BackgroundColor" Value="{DynamicResource ApplicationAccentColor}" />
                <Setter Property="HeightRequest" Value="50" />
                <Setter Property="Padding" Value="10, 0, 20, 0" />
            </Style>
            <VisualStateGroupList x:Key="ButtonBaseVisualStates">
                <VisualStateGroup x:Name="CommonGroups">
                    <VisualState x:Name="Normal"/>
                    <VisualState x:Name="Focused"/>
                    <VisualState x:Name="PointerOver">
                        <VisualState.Setters>
                            <Setter Property="Button.Background" Value="#0FFFFFFF" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Pressed">
                        <VisualState.Setters>
                            <Setter Property="Button.Background" Value="#1AFFFFFF" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Disabled" />
                </VisualStateGroup>
            </VisualStateGroupList>
            <Style x:Key="ButtonBaseStyle" TargetType="telerik:RadButton">
                <Setter Property="TextColor" Value="{OnIdiom Desktop={DynamicResource TextOnAccentColor}, Default={DynamicResource AccentColor8}}" />
                <Setter Property="BackgroundColor" Value="Transparent" />
                <Setter Property="BorderColor" Value="{OnIdiom Desktop={DynamicResource TextOnAccentColor}, Default={DynamicResource AccentColor8}}" />
                <Setter Property="BorderWidth" Value="2" />
                <Setter Property="TextTransform" Value="{OnPlatform Default=None, Android=Uppercase}" />
                <Setter Property="CornerRadius" Value="4" />
                <Setter Property="Padding" Value="{OnPlatform Default='10', WinUI='24, 6', MacCatalyst='24, 4'}" />
            </Style>
            <Style x:Key="AccentButtonStyle" TargetType="telerik:RadButton" BasedOn="{StaticResource ButtonBaseStyle}">
                <Setter Property="TextColor" Value="{DynamicResource AccentColor8}" />
                <Setter Property="BorderColor" Value="{DynamicResource AccentColor8}" />
                <Setter Property="VisualStateManager.VisualStateGroups">
                    <VisualStateGroupList>
                        <VisualStateGroup x:Name="CommonGroups">
                            <VisualState x:Name="Normal"/>
                            <VisualState x:Name="Focused"/>
                            <VisualState x:Name="Pressed">
                                <VisualState.Setters>
                                    <Setter Property="BorderColor" Value="{DynamicResource AccentColor8}" />
                                    <Setter Property="TextColor" Value="{DynamicResource AccentColor8}" />
                                </VisualState.Setters>
                            </VisualState>
                            <VisualState x:Name="Disabled" >
                                <VisualState.Setters>
                                    <Setter Property="BorderColor" Value="{DynamicResource AccentColor8DisabledColor}" />
                                    <Setter Property="TextColor" Value="{DynamicResource AccentColor8DisabledColor}" />
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateGroupList>
                </Setter>
            </Style>
            <Style x:Key="SubmitButtonStyle" TargetType="telerik:RadButton" BasedOn="{StaticResource AccentButtonStyle}">
                <Setter Property="Text" Value="Submit Request" />
                <Setter Property="HorizontalContentAlignment" Value="Center" />
                <Setter Property="HorizontalOptions" Value="FillAndExpand" />
                <Setter Property="VerticalOptions" Value="CenterAndExpand" />
            </Style>
            <Style x:Key="MoreInfoButtonStyle" TargetType="telerik:RadButton" BasedOn="{StaticResource ButtonBaseStyle}">
                <Setter Property="Text" Value="{OnIdiom Phone='More Info', Desktop=''}" />
                <Setter Property="HorizontalContentAlignment" Value="End" />
                <Setter Property="VerticalOptions" Value="Center" />
                <Setter Property="FontSize" Value="{OnPlatform MacCatalyst=Small, iOS=Small, Default=Default}" />
                <Setter Property="ImageSource" Value="{OnIdiom Desktop=info_desktop.png, Default=info_mobile.png}" />
                <Setter Property="Padding" Value="{OnPlatform Default='12, 10', MacCatalyst=0, WinUI=0}" />
                <Setter Property="BorderWidth" Value="{OnIdiom Phone=2, Desktop=0}" />
            </Style>
            <Style x:Key="DefaultBusyIndicatorStyle" TargetType="telerik:RadBusyIndicator">
                <Setter Property="AnimationContentColor" Value="{DynamicResource AccentColor8}" />
            </Style>
            <Style x:Key="ExampleCheckBoxStyle" TargetType="telerik:RadCheckBox">
                <Setter Property="UncheckedColor" Value="#CCCCCC"/>
                <Setter Property="CheckedColor" Value="{DynamicResource ApplicationAccentColor}"/>
            </Style>
            <Style x:Key="PageStyle" TargetType="ContentPage">
                <Setter Property="NavigationPage.HasNavigationBar" Value="False" />
                <Setter Property="BackgroundColor" Value="{DynamicResource DefaultBackgroundColor}" />
            </Style>
            <Style x:Key="PageAppBarImageButtonStyle" TargetType="ImageButton">
                <Setter Property="VerticalOptions" Value="Center" />
                <Setter Property="HeightRequest" Value="24" />
                <Setter Property="WidthRequest" Value="24" />
                <Setter Property="Margin" Value="8, 0, 0, 0" />
            </Style>
            <Style x:Key="ControlWrapperBorderStyle" TargetType="telerik:RadBorder">
                <Setter Property="BackgroundColor" Value="{DynamicResource WrapperBackgroundColor}" />
                <Setter Property="Padding" Value="16, 24" />
                <Setter Property="CornerRadius" Value="{OnPlatform Default=0, MacCatalyst=2, WinUI=2}" />
            </Style>
            <Style x:Key="CollectionViewItemStyle" TargetType="telerik:RadCollectionViewItemView" BasedOn="{StaticResource RadCollectionViewItemStyle}">
                <Setter Property="BorderThickness" Value="0, 0, 0, 1" />
                <Setter Property="BorderColor" Value="{DynamicResource DefaultBorderColor}" />
                <Setter Property="CornerRadius" Value="0" />
                <Setter Property="ControlTemplate">
                    <ControlTemplate>
                        <ContentPresenter />
                    </ControlTemplate>
                </Setter>
            </Style>
            <Style x:Key="SwitchStyle" TargetType="Switch">
                <Setter Property="OnColor" Value="{DynamicResource SwitchToggledOffOnColor}" />
                <Setter Property="VisualStateManager.VisualStateGroups">
                    <VisualStateGroupList>
                        <VisualStateGroup Name="CommonStates">
                            <VisualState Name="On">
                                <VisualState.Setters>
                                    <Setter Property="Switch.OnColor" Value="{DynamicResource SwitchToggledOnOnColor}" />
                                    <Setter Property="Switch.ThumbColor" Value="{DynamicResource SwitchToggledOnThumbColor}" />
                                </VisualState.Setters>
                            </VisualState>
                            <VisualState Name="Off">
                                <VisualState.Setters>
                                    <Setter Property="Switch.OnColor" Value="{DynamicResource SwitchToggledOffOnColor}" />
                                    <Setter Property="Switch.ThumbColor" Value="{DynamicResource SwitchToggledOffThumbColor}" />
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateGroupList>
                </Setter>
                <Style.Triggers>
                    <Trigger TargetType="Switch" Property="IsEnabled" Value="False">
                        <Setter Property="Opacity" Value="0.6" />
                        <Setter Property="ThumbColor" Value="{DynamicResource PlaceholderColor}" />
                    </Trigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
