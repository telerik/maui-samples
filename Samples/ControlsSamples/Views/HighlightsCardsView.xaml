<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:layouts="clr-namespace:QSF.Layouts"
             xmlns:styles="clr-namespace:QSF.Styles"
             xmlns:views="clr-namespace:QSF.Views"
             xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
             x:Class="QSF.Views.HighlightsCardsView">

    <VisualElement.Resources>
        <SolidColorBrush x:Key="Color1" Color="{DynamicResource AccentColor4}" />
        <SolidColorBrush x:Key="Color2" Color="{DynamicResource AccentColor5}" />
        <SolidColorBrush x:Key="Color3" Color="{DynamicResource AccentColor6}" />
        <SolidColorBrush x:Key="Color4" Color="{DynamicResource AccentColor2}" />
    </VisualElement.Resources>

    <telerik:RadBorder CornerRadius="4"
                       Margin="0, 6, 0, 12">
        <Grid x:Name="grid" />
    </telerik:RadBorder>

</ContentView>