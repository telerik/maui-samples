<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
             x:Class="SDKBrowserMaui.Examples.RichTextEditorControl.FeaturesCategory.GetHtmlExample.GetHtml">
    <Grid RowDefinitions="Auto,*"
          RowSpacing="10">
        <HorizontalStackLayout Spacing="10">
            <Label Text="Source from a stream" VerticalOptions="Center" />
            <Button Text="Get HTML" Clicked="GetHTML_Clicked" VerticalOptions="Center" />
        </HorizontalStackLayout>
        <telerik:RadRichTextEditor x:Name="richTextEditor" 
                                   Grid.Row="1"
                                   BorderThickness="1"
                                   BorderColor="#DFDFDF"/>
    </Grid>
</ContentView>
