<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
             x:Class="SDKBrowserMaui.Examples.SkeletonControl.AnimationCategory.AnimationExample.Animation">
	<Grid RowDefinitions="Auto, *"
		  RowSpacing="10">
		<HorizontalStackLayout Spacing="10">
			<Label Text="Animation:"
				   VerticalOptions="Center" />
			<telerik:RadComboBox SelectedItem="{Binding Source={x:Reference skeleton}, Path=SkeletonAnimationType}">
				<telerik:RadComboBox.ItemsSource>
					<x:Array Type="{x:Type telerik:SkeletonAnimationType}">
						<telerik:SkeletonAnimationType>None</telerik:SkeletonAnimationType>
						<telerik:SkeletonAnimationType>Pulse</telerik:SkeletonAnimationType>
					</x:Array>
				</telerik:RadComboBox.ItemsSource>
			</telerik:RadComboBox>
		</HorizontalStackLayout>
			<!-- >> skeleton-animation-type -->
		<telerik:RadSkeleton SkeletonAnimationType="None"
							 RepeatSpacing="2"
							 RepeatCount="3"
							 x:Name="skeleton"
							 Grid.Row="1" />
		<!-- << skeleton-animation-type -->
	</Grid>
</ContentView>
