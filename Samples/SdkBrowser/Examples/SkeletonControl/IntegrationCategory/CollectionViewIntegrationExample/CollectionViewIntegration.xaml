<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
             x:Class="SDKBrowserMaui.Examples.SkeletonControl.IntegrationCategory.CollectionViewIntegrationExample.CollectionViewIntegration">
	<ContentView.Resources>
		<ResourceDictionary>
			<Style x:Key="ItemStyle" TargetType="telerik:RadCollectionViewItemView">
				<Setter Property="Margin" Value="10, 30, 20, 0" />
			</Style>
			<!-- >> collectionview-loadingview-template -->
			<telerik:InvertedBooleanConverter x:Key="InvertedBoolConverter" />

			<DataTemplate x:Key="ItemLoadingTemplate">
				<HorizontalStackLayout>
					<Image Source="avatar.png"
						   WidthRequest="60"
						   HeightRequest="60" />
					<VerticalStackLayout Margin="10, 0"
										 VerticalOptions="Center"
										 Spacing="5">
						<Label Text="{Binding Name}" />
						<Label Text="{Binding Email}" />
					</VerticalStackLayout>
				</HorizontalStackLayout>
			</DataTemplate>
			<!-- << collectionview-loadingview-template -->
		</ResourceDictionary>
	</ContentView.Resources>
	
	<Grid RowDefinitions="Auto, *"
		  RowSpacing="10">
		<HorizontalStackLayout Spacing="10">
			<Label Text="Is Content Loading"
				   VerticalOptions="Center" />
			<telerik:RadCheckBox x:Name="isSkeletonLoading"
								 IsChecked="{Binding Source={x:Reference skeleton}, Path=IsLoading}" />
		</HorizontalStackLayout>
		<!-- >> skeleton-integration-collectionview -->
		<Grid Grid.Row="1">
			<telerik:RadSkeleton SkeletonType="PersonaCircle"
								 RepeatSpacing="2"
								 RepeatCount="10"
								 Grid.Row="1"
								 x:Name="skeleton" />
			<telerik:RadCollectionView ItemsSource="{Binding Source}"
									   ItemViewStyle="{StaticResource ItemStyle}"
									   ItemTemplate="{StaticResource ItemLoadingTemplate}"
									   IsVisible="{Binding Source={x:Reference isSkeletonLoading}, Path=IsChecked, Converter={StaticResource InvertedBoolConverter}}">
				<telerik:RadCollectionView.ItemsLayout>
					<telerik:CollectionViewLinearLayout ItemSpacing="10" />
				</telerik:RadCollectionView.ItemsLayout>
			</telerik:RadCollectionView>
		</Grid>
		<!-- << skeleton-integration-collectionview -->
	</Grid>
</ContentView>
