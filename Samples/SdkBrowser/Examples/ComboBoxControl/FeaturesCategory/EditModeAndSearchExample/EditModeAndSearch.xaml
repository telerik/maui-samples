<?xml version="1.0" encoding="utf-8" ?>
<telerik:RadContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                        xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
                        x:Class="SDKBrowserMaui.Examples.ComboBoxControl.FeaturesCategory.EditModeAndSearchExample.EditModeAndSearch"
                        Margin="5">
    <telerik:RadContentView.Content>
        <VerticalStackLayout WidthRequest="300" HorizontalOptions="Center">
            <!-- >> combobox-editmode-and-search -->
            <telerik:RadComboBox ItemsSource="{Binding Items}"
                                 SearchTextPath="Name"
                                 DisplayMemberPath="Name"
                                 SearchMode="StartsWith"
                                 IsEditable="True"
                                 HighlightTextColor="Red"
                                 AutomationId="comboBox"/>
            <!-- << combobox-editmode-and-search -->
        </VerticalStackLayout>
    </telerik:RadContentView.Content>
</telerik:RadContentView>