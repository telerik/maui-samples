<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
             x:Class="SDKBrowserMaui.Examples.CalendarControl.StylingCategory.CalendarStylingExample.CalendarStyling">
    <ContentView.Resources>
        <Style TargetType="telerik:RadCalendar">
            <Setter Property="HorizontalOptions" Value="{OnPlatform Default=Fill, MacCatalyst=Start, WinUI=Start}" />
            <Setter Property="VerticalOptions" Value="{OnPlatform Default=Fill, MacCatalyst=Start, WinUI=Start}" />
        </Style>
    </ContentView.Resources>

    <Grid>
        <!-- >> calendar-styling -->
        <telerik:RadCalendar BackgroundColor="#198660C5"
                             BorderBrush="#808660C5"
                             BorderThickness="1"
                             CornerRadius="10" />
        <!-- << calendar-styling -->
    </Grid>
</ContentView>
