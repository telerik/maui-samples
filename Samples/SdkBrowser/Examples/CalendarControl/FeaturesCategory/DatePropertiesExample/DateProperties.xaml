<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
             x:Class="SDKBrowserMaui.Examples.CalendarControl.FeaturesCategory.DatePropertiesExample.DateProperties">
    <ContentView.Resources>
        <Style TargetType="telerik:RadCalendar">
            <Setter Property="HorizontalOptions" Value="{OnPlatform Default=Fill, MacCatalyst=Start, WinUI=Start}" />
            <Setter Property="VerticalOptions" Value="{OnPlatform Default=Fill, MacCatalyst=Start, WinUI=Start}" />
        </Style>
    </ContentView.Resources>

    <!-- >> calendar-date-properties -->
    <Grid>
        <telerik:RadCalendar AutomationId="calendar"
                             DisplayDate="7/22/2023"
                             MinDate="1/1/2022"
                             MaxDate="12/31/2024" />
    </Grid>
    <!-- << calendar-date-properties -->
</ContentView>
