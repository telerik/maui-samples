<?xml version="1.0" encoding="utf-8" ?>
<telerik:RadContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                        xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
                        x:Class="SDKBrowserMaui.Examples.WrapLayoutControl.WrapFunctionalityCategory.WrapLayoutStretchLastChildExample.WrapLayoutStretchLastChild"
                        Margin="5">
    <telerik:RadContentView.Content>
        <!-- >> wraplayout-position-lastelement' -->
        <VerticalStackLayout VerticalOptions="Start">
            <Label Text="StretchLastChild = True" Margin="0,0,0,5"/>
            <telerik:RadWrapLayout StretchLastChild="True">
                <telerik:RadButton BorderThickness="1" Text="First Child" Margin="2"/>
                <telerik:RadButton BorderThickness="1" Text="Last Child" Margin="2"/>
            </telerik:RadWrapLayout>

            <Label Text="StretchLastChild = False" Margin="0,10,0,5"/>
            <telerik:RadWrapLayout StretchLastChild="False">
                <telerik:RadButton BorderThickness="1" Text="First Child" Margin="2"/>
                <telerik:RadButton BorderThickness="1" Text="Last Child" Margin="2"/>
            </telerik:RadWrapLayout>
        </VerticalStackLayout>
        <!-- << wraplayout-position-lastelement' -->
    </telerik:RadContentView.Content>
</telerik:RadContentView>