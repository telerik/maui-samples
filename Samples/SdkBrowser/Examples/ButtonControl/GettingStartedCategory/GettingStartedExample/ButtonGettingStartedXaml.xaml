<?xml version="1.0" encoding="utf-8" ?>
<telerik:RadContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                        xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
                        x:Class="SDKBrowserMaui.Examples.ButtonControl.GettingStartedCategory.GettingStartedExample.ButtonGettingStartedXaml"
                        Margin="5">
    <telerik:RadContentView.Content>
        <VerticalStackLayout>
            <!-- >> button-getting-started-xaml -->
            <telerik:RadButton x:Name="button" 
                               Text="Click me!"  
                               BorderThickness="2" 
                               BorderColor="#4488F6" 
                               AutomationId="button"
                               Clicked="button_Clicked"/>
            <!-- << button-getting-started-xaml -->
            <Label x:Name="label1" AutomationId="countLabel"/>
        </VerticalStackLayout>
    </telerik:RadContentView.Content>
</telerik:RadContentView>